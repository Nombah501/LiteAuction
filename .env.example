# -----------------------------------------------------------------------------
# Minimal setup template
# Use this file for quick bootstrap. For full tuning options see:
#   .env.full.example
# -----------------------------------------------------------------------------

# Core runtime (required)
BOT_TOKEN=replace_me
BOT_USERNAME=Auction501_bot
DATABASE_URL=postgresql+asyncpg://auction:auction@db:5432/auction
REDIS_URL=redis://redis:6379/0
TZ=Asia/Tashkent
LOG_LEVEL=INFO

# Access control bootstrap (required for moderation/admin usage)
# Comma-separated Telegram user IDs; first ID is treated as owner.
ADMIN_USER_IDS=
# Optional operator subset (defaults to ADMIN_USER_IDS when empty).
ADMIN_OPERATOR_USER_IDS=

# Moderation destination (recommended)
MODERATION_CHAT_ID=
# Optional default topic fallback when specific topic IDs are unset.
MODERATION_THREAD_ID=

# Admin web auth (required in production)
ADMIN_PANEL_TOKEN=
ADMIN_WEB_SESSION_SECRET=
ADMIN_WEB_COOKIE_SECURE=false

# Optional GitHub outbox integration (enable only when token is set)
GITHUB_AUTOMATION_ENABLED=false
GITHUB_TOKEN=
GITHUB_REPO_OWNER=Nombah501
GITHUB_REPO_NAME=LiteAuction

# Docker Compose database bootstrap
POSTGRES_DB=auction
POSTGRES_USER=auction
POSTGRES_PASSWORD=auction
